<?xml version="1.0" encoding="UTF-8"?>
<SyncSalesOrder xmlns="http://www.openapplications.org/oagis/10">
  <ApplicationArea>
    <Sender>
      <LogicalID>INFOR_ION</LogicalID>
    </Sender>
    <CreationDateTime>${TIMESTAMP}</CreationDateTime>
  </ApplicationArea>
  <DataArea>
    <Sync>
      <ActionCriteria>
        <ActionExpression actionCode="Add"/>
      </ActionCriteria>
    </Sync>
    <SalesOrder>
      <SalesOrderHeader>
        <!-- Missing DocumentID - REQUIRED -->
        <DocumentDateTime>${TIMESTAMP}</DocumentDateTime>
        <Status>
          <Code>OPEN</Code>
        </Status>
        <!-- Missing CustomerParty - REQUIRED -->
        <!-- Missing Amounts - REQUIRED -->
      </SalesOrderHeader>
      <!-- Missing SalesOrderLine items - REQUIRED -->
    </SalesOrder>
  </DataArea>
</SyncSalesOrder>
